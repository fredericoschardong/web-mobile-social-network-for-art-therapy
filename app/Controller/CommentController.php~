<?php

class CommentController extends AppController {
	var $uses = array('Images', 'Comments');

    public function add($photo_id, $comment) {
        $this->Comments->create();

		$data = $this->request->data;

		$data['Images']['user_id'] = $this->Session->read('Auth.User.id');
		$data['Images']['date_add'] = date("Y-m-d H:i:s");

        if ($this->Images->save($data)) {
			$this->Session->setFlash(__('The image has been saved.'), 'flash_success');
            $this->redirect(array('action' => 'index'));
        } else {
            $this->Session->setFlash(__('The image could not be saved. Please, try again.'), 'flash_error');
        }
    }
}

?>
